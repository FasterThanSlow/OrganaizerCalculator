<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="numberButtonBackground" format="reference"/>
    <attr name="equalButtonBackground" format="reference"/>
    <attr name="operatorButtonBackground" format="reference"/>
    <attr name="clearButtonBackground" format="reference"/>
    <attr name="menuNavigationBarIcon" format="reference" />

    <color name="colorReveal">#50dbff</color>

    // Light theme
    <color name="colorPrimary">#7ac7db</color>
    <color name="colorButtonText">#000</color>
    <color name="colorDisplayText">#757575</color>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorButtonText</item>
        <item name="android:textColorSecondary">@color/colorDisplayText</item>
        <item name="numberButtonBackground">@drawable/button_background_numeric_selector</item>
        <item name="equalButtonBackground">@drawable/button_background_eq_selector</item>
        <item name="operatorButtonBackground">@drawable/button_background_operator_selector</item>
        <item name="clearButtonBackground">@drawable/button_background_clear_selector</item>
        <item name="menuNavigationBarIcon">@drawable/menu_navigation_bar_icon</item>
    </style>

    // Dark theme
    <color name="colorPrimaryDarkTheme">#7ac7db</color>
    <color name="colorButtonTextDarkTheme">#fff</color>
    <color name="colorDisplayTextDarkTheme">#757575</color>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTheme</item>
        <item name="android:textColorPrimary">@color/colorButtonTextDarkTheme</item>
        <item name="android:textColorSecondary">@color/colorDisplayTextDarkTheme</item>
        <item name="numberButtonBackground">@drawable/button_background_numeric_dark_theme_selector</item>
        <item name="equalButtonBackground">@drawable/button_background_eq_selector</item>
        <item name="operatorButtonBackground">@drawable/button_background_operator_selector</item>
        <item name="clearButtonBackground">@drawable/button_background_clear_selector</item>
        <item name="menuNavigationBarIcon">@drawable/menu_navigation_bar_icon</item>
    </style>

</resources>